<!DOCTYPE html>
<html>
  <head>
    <title>KadaiApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="header">
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/articles">Kadai</a></h1>
      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <button class = "button5" type="submit"> <%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
          <button class = "button5" type="submit"><a class="post" href="/articles/new">投稿する</a>
        </div>
      <% else %>
        <div class="grid-6">
          <button class = "button5" type="submit"><%= link_to "ログイン", new_user_session_path, class: 'post' %></button>
          <button class = "button5" type="submit"><%= link_to "新規登録", new_user_registration_path, class: 'post' %></button>
        </div>
      <% end %>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
